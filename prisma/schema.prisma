generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  role      String   @default("user") // "admin", "hr", "legal", "dev", "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditLogs AuditLog[]

  @@map("users")
}

model File {
  id        String   @id @default(uuid())
  token     String   @unique
  path      String
  expiresAt DateTime
  isUsed    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auditLogs AuditLog[]

  @@map("files")
}

model AuditLog {
  id        String   @id @default(uuid())
  fileId    String
  userId    String?
  userEmail String?
  ipAddress String?
  action    String   // "view", "download", "upload", "analyze"
  userAgent String?
  createdAt DateTime @default(now())

  file File @relation(fields: [fileId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}